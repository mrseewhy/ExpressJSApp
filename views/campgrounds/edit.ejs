<%- include('../partials/header') %>
<header>
<h1 class="text-center">Edit <%=campground.name   %></h1>
<div class="col-md-6 col-sm-10 mx-auto mt-5">
    <form action="/campgrounds/<%=campground._id  %>?_method=PUT" method="post">
        <div class="form-group">
          <input type="text"
            class="form-control" name="name" value="<%=campground.name   %>">
        </div>
        <div class="form-group">
            <input type="text"
              class="form-control" name="image" value="<%=campground.image%>">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="description" id="" rows="3"><%=campground.description   %></textarea>
        </div>
        <button type="submit" class="btn btn-block btn-light m-auto">Save Edit</button>
    </form>
    <p>
        <a class="btn btn-sm btn-secondary mt-5" href="/campgrounds/<%=campground._id   %>">go back to <%=campground.name   %></a>
    </p>
</div>
</header>
<%- include('../partials/footer') %>

     