<%- include('../partials/header') %>
<header>
<h1 class="text-center">Create A New Campground</h1>
<div class="col-md-6 col-sm-10 mx-auto mt-5">
    <form action="/campgrounds" method="post">
        <div class="form-group">
          <input type="text"
            class="form-control" name="name" id="" placeholder="Campground Name">
        </div>
        <div class="form-group">
            <input type="text"
              class="form-control" name="image" id="" placeholder="Image url">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="description" id="" rows="3" placeholder="Description"></textarea>
        </div>
        <button type="submit" class="btn btn-block btn-light m-auto">Submit</button>
    </form>
    <p>
        <a class="btn btn-sm btn-secondary mt-5" href="/campgrounds">go back</a>
    </p>
</div>
</header>
